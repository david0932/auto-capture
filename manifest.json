{
  "manifest_version": 3,
  "name": "Auto Page Capture",
  "version": "2.0",
  "description": "Auto screenshot + auto flip + merge to PDF (v2.0: Zero page loss)",
  "permissions": ["activeTab", "tabs", "downloads", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["jspdf.umd.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}

